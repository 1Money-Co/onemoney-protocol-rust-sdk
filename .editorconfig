# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust source files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Configuration files
[*.{cfg,conf,config}]
indent_style = space
indent_size = 2

# Lock files (generated, don't modify formatting)
[{package-lock.json,Cargo.lock}]
indent_style = unset
indent_size = unset
